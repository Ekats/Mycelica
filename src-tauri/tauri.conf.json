{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mycelica",
  "version": "0.10.0",
  "identifier": "com.mycelica.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "beforeBundleCommand": "ln -sf mycelica src-tauri/target/release/batch_import && ln -sf mycelica src-tauri/target/release/mycelica-team && ln -sf mycelica src-tauri/target/release/mycelica-server && ln -sf mycelica-cli src-tauri/target/release/cli",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mycelica",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/mycelica-cli"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
